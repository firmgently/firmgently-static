{% macro create(items, section) %}
{% block main %}
<ul class="itemContainer">
	<li><ul class="boxRight">
		<h1>BUILDINGS in <strong>{{ section }}</strong></h1>
		{% for item in items %}
			<li><span class="captionedImage" style="max-width:76%;">
				<a href="{{ item.path }}"><img alt="VIEW DETAILS: {{ item.data.title }}" title="VIEW DETAILS: {{ item.data.title }}" src="/images/items/thumbs/{{ item.data.id }}.jpg"></a>
				<h3>{{ item.data.title }} ({{ item.data.added }})</h3>
			</span></li>
		{% endfor %}
		</ul></li>
</ul><!-- itemContainer -->
{% endblock %}
{% endmacro %}
